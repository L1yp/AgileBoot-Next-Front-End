/* 首页顶部导航 */
.nav-height {
  width: 100%;
  height: 88rpx;
  position: fixed;
  top: 0;
  z-index: 3;
  background: white;
}

.nav-height::after{
  content: "";
  position: absolute;
  width: 100%;
  height: 1px;
  background: #F5F5F5;
  bottom: 0;
  left: 0;
  transform: scaleY(0.5);
}

.nav-warp {
  height: inherit;
  padding: 0 15rpx;
  display: flex;
  align-items: center;
}

.nav-text {
  min-width: 77rpx;
  text-align: center;
  padding-right: 25rpx;
}

.nav-active {
  color: #f34c4f;
  font-weight: 500;
}